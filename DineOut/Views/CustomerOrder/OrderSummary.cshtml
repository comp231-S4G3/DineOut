@model DineOut.ViewModels.CustomerOrderViewModel

<h2>Order Summary</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Quantity</th>
            <th>Item</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.CustomerOrder.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Item.ItemName</td>
                <td class="text-right">@line.Item.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Item.Price).ToString("c"))
                </td>
                <td>
                    <form asp-action="RemoveFromCustomerOrder" method="post">
                        <input type="hidden" name="ItemId"
                               value="@line.Item.ItemId" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.CustomerOrder.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-action="OrderDetails">Continue shopping</a>
    <a class="btn btn-primary" asp-action="Checkout">Checkout</a>
</div>
