@model AllModels
@{
	ViewData["Title"] = "OrderDetails";
	Layout = "_Layout";
}

<h2>OrderDetails CustomerSide</h2>

<div class="orderDetailsBody">
	<table class="table table-striped orderDetailsTable ">
		<thead>
			<tr>
				<th>Order Number</th>
				<th>Date</th>
				<th>Restaurant</th>
				<th>Table #</th>
				<th>Costumer</th>
				<th>Price</th>
				<th>Order Status</th>
				<th>Item</th>
				<th>Quantity</th>


			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.Orders</td>@*//orderID*@
				<td>@Model.Orders</td>@*//orderDate*@
				<td>@Model.Restaurants</td>@*retaurantName*@
				<td>@Model.Orders</td>@*table.Num*@
				<td>@Model.Orders</td>@*customerId*@
				<td>@Model.Orders</td>@*Price*@
				<td>@Model.Orders</td>@*OrderStatus*@


			</tr>
			@foreach (var item in Model.Order_Items)
			{
				<tr>
					<td>@item.ItemId</td>
					<td>@item.Quantity</td>
				</tr>
			}
		</tbody>
	</table>
	<form action="addNote" method="post">
		<label>Add Notes: </label>
		<textarea rows="4"></textarea>
		<button class="btn-success" type="submit">Confirm</button>
	</form>
</div>