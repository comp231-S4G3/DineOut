@model IEnumerable<Order>

@{
    ViewBag.Title = "Completed Orders";
    Layout = "_RestaurantLayout";
}


<table class="table table-sm table-bordered text-center">
    <thead>
        @if (Model.Count() == 0)
        {
            <tr>
                <th class="text-sm-center font-weight-bold">You have not completed any order(s) yet!</th>
            </tr>
        }
        else
        {
            <tr>
                <th>ID</th>
                <th>Table #</th>
                <th>Costumer ID</th>
                <th>Date</th>
            </tr>
        }
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    <a asp-action="OrderDetails" asp-route-orderId="@order.OrderId">
                        @order.OrderId
                    </a>
                </td>
                <td>@order.TableNum</td>
                <td>
                    <a asp-action="CustomerInfo">
                        @order.CustomerId
                    </a>
                </td>
                <td>@order.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>

