@model IEnumerable<Order>

@{
    ViewBag.Title = "Completed Orders";
    Layout = "_RestaurantLayout";
}

<nav class="navbar navbar-dark default-color">
    <form class="form-inline" asp-action="SearchString">
        <div class="md-form my-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Order number" name="searchedString" aria-label="Search">
        </div>
        <button class="btn btn-outline-dark btn-md my-2 my-sm-0 ml-3" type="submit">Search</button>
    </form>
</nav>
<table class="table table-sm table-striped" style=" background-color: rgba(255, 226, 112, 0.8);">
	<thead>
		@if (Model.Count() == 0)
		{
			<tr>
				<th class="text-sm-center font-weight-bold">You have not completed any order(s) yet!</th>
			</tr>
		}
		else
		{
			<tr>
				<th>ID</th>
				<th>Table #</th>
				<th>Costumer ID</th>
				<th>Date</th>
			</tr>
		}
	</thead>
	<tbody>
		@foreach (var order in Model)
		{
			<tr>
				<td>
					<a asp-action="OrderDetails" asp-route-orderId="@order.OrderId">
						@order.OrderId
					</a>
				</td>
				<td>@order.TableNum</td>
				<td>
					<a asp-action="CustomerInfo">
						@order.CustomerId
					</a>
				</td>
				<td>@order.CreatedOn</td>
			</tr>
		}
	</tbody>
</table>

