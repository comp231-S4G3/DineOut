@model IEnumerable<Item>
@{
    ViewBag.Title = "Your Restaurant";
    Layout = "_RestaurantLayout";
}

<div>
    <h3>@ViewBag.Greetings !</h3>
</div>

@Html.PartialAsync("CategorySearch")

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Dish</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>@item.ItemName</td>
                <td>@item.Price.ToString("c")</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="itemID" value="@item.ItemId" />
                        <a asp-action="Update_Item" asp-route-itemId="@item.ItemId" asp-route-menuId="@item.MenuId">
                            Edit
                        </a>
                        <button type="button" title="Delete Item" onclick="location.href='@Url.Action("Delete_Item", new { menu_id = 5, item_id = item.ItemId})'">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

