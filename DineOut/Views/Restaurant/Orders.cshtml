@model IEnumerable<Order>

@{
    ViewBag.Title = "Current Orders";
    Layout = "_RestaurantLayout";
}


<table class="table table-sm table-bordered">
    <thead>
            @if (Model.Count() == 0)
            {
                <tr>
                    <th class="text-center font-weight-bold">You have not received any orders yet!</th>
                </tr>
            }
            else
            {
                <tr>
                    <th>Order#</th>
                    <th>Table #</th>
                    <th>Costumer ID</th>
                    <th>Date</th>
                </tr>
            }
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    <a asp-action="OrderDetails" asp-route-orderId="@order.OrderId">
                        @order.OrderId
                    </a>
                </td>
                <td>@order.TableNum</td>
                <td>
                    <a asp-action="CustomerInfo">
                        @order.CustomerId
                    </a>
                </td>
                <td>@order.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>

